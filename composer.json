{
    "name": "tahsilat/tahsilat-php",
    "description": "Tahsilat Payment Gateway PHP SDK",
    "keywords": ["tahsilat", "payment", "gateway", "credit card", "api", "3ds", "pos"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/tahsilat/tahsilat-php",
    "authors": [
        {
            "name": "Tahsilat Development Team",
            "email": "dev@tahsilat.dev"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0 || ^11.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Tahsilat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tahsilat\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=6"
    }
}